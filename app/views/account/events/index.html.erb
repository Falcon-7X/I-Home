<div class="col-md-12">

  <h2 class="text-center"> 我创建的事件 </h2>

  <table class="table">
    <thead>
      <tr>
        <th> # </th>
        <th> 事件名称 </th>
        <th> 创建时间 </th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td> # </td>
          <td> <%= link_to(event.title, event_path(event)) %> </td>
          <td> <%= event.created_at %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
