<div class="row">
  <div class="col-md-4 col-md-offset-4">

    <div class="panel panel-default">

      <div class="panel-heading">
        <h4> <%= @event.title %> </h4>
      </div>

      <div class="panel-body">
        <h5> <%= simple_format(@event.description) %> </h5>
      </div>

      <ul class="list-group">
        <li class="list-group-item">重要紧急程度 ：<%= @event.important_class %></li>
        <li class="list-group-item">执行方法 ：<%= @event.executive_method %></li>
        <li class="list-group-item">事件截止日期 ：<%= @event.endtime %></li>
      </ul>

      <div class="panel-footer">Attachment here</div>

    </div>

  </div>
</div>
